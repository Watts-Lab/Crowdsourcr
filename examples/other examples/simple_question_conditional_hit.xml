<xml>
  <modules>
    <module>
      <header>Instructions</header>
      <name>screening</name>
      <questions>
        <question>
          <varname>smart</varname>		 
          <questiontext>Are you smart?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>No</text>
                <value>0</value>
              </category>
              <category>
                <text>Yes</text>
                <value>1</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>kidding</varname>
          <condition>
            <![CDATA[
			  smart==0
			  ]]>
          </condition>

          <questiontext>You were kidding, right?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>No</text>
                <value>0</value>
              </category>
              <category>
                <text>Yes</text>
                <value>1</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>sum10</varname>		 
          <questiontext>What is 5+5?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>10</text>
                <value>1</value>
              </category>
              <category>
                <text>20</text>
                <value>0</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>sum15</varname>		 
          <questiontext>What is 5+10?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>20</text>
                <value>0</value>
              </category>
              <category>
                <text>15</text>
                <value>1</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>biggerthan</varname>		 
          <questiontext>Which number is bigger: 12 or 15?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>12</text>
                <value>0</value>
              </category>
              <category>
                <text>15</text>
                <value>1</value>
              </category>
            </categories>
          </content>
        </question>
      </questions>
    </module>
    <module>
      <header>Spelling</header>
      <name>spelling</name>
      <questions>
        <question>
          <varname>spelling</varname>		 
          <bonus>threshold:51</bonus>
          <questiontext>Please indicate which spelling is correct:</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>Rhythm</text>
                <value>0</value>
              </category>
              <category>
                <text>Rythm</text>
                <value>1</value>
              </category>
              <category>
                <text>Other spelling</text>
                <value>other</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>spelling_other</varname>
		      <condition>
			  <![CDATA[
			  spelling==other
			  ]]>
			  </condition>
          <bonus>threshold:51</bonus>
		      <bonuspoints>2</bonuspoints>
          <questiontext>Please specify the spelling.</questiontext>
          <valuetype>text</valuetype>
        </question>
        <question>
          <varname>letterc</varname>		 
          <questiontext>What does the letter C stand for?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>C is for cookie</text>
                <value>cookie</value>
              </category>
              <category>
                <text>C is for car</text>
                <value>car</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>songc</varname>		 
		      <condition>
			  <![CDATA[
			  letterc==cookie
			  ]]>
			  </condition>
          <questiontext>What famous song starts with the memorale line: C is for cookie ...</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>C is for cookie, that's good enough for me!</text>
                <value>1</value>
              </category>
              <category>
                <text>C is for cookie but I like carrots ...</text>
                <value>0</value>
              </category>
            </categories>
          </content>
        </question>	
        <question>
          <varname>singerc</varname>		 
		      <condition>
			  <![CDATA[
			  letterc==cookie&songc==1
			  ]]>
			  </condition>
          <questiontext>Which famous singer sang this song?</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>Cookie monster</text>
                <value>1</value>
              </category>
              <category>
                <text>Cher</text>
                <value>0</value>
              </category>
            </categories>
          </content>
        </question>	
      </questions>
    </module>
    <module>
      <header>Demographics</header>
      <name>demographics</name>
      <questions>
        <question>
          <varname>wealth</varname>		 
          <questiontext>Please tell us how us about your economic circumstances:</questiontext>
          <valuetype>categorical</valuetype>
          <content>
            <categories>
              <category>
                <text>Poor as a mouse</text>
                <value>mouse</value>
              </category>
              <category>
                <text>Doing OK.</text>
                <value>ok</value>
              </category>
              <category>
                <text>Filthy rich.</text>
                <value>rich</value>
              </category>
            </categories>
          </content>
        </question>
        <question>
          <varname>reincarnation</varname>		 
          <questiontext>If you could start all over: who would you like to be?</questiontext>
          <valuetype>categorical</valuetype>
		    <options>
				<layout>dropdown</layout>
			</options>
          <content>
            <categories>
              <category>
                <text>Emperor Nero</text>
                <value>nero</value>
              </category>
              <category>
                <text>Whinston Churchill</text>
                <value>churchill</value>
              </category>
              <category>
                <text>Wizard of Oz</text>
                <value>oz</value>
              </category>
            </categories>
          </content>
        </question>
      </questions>
    </module>
  </modules>

  <tasks>
    <task>
      <content>screening.html</content>
      <taskid>1</taskid>
      <modules>screening</modules>
    </task>
    <task>
      <content>spelling.html</content>
      <taskid>2</taskid>
      <modules>spelling</modules>
    </task>	
    <task>
      <content>demographics.html</content>
      <taskid>3</taskid>
      <modules>demographics</modules>
    </task>	
  </tasks>
  
  <hits>
    <hit>
      <hitid>1</hitid>
      <tasks>1 2 3</tasks>
	  <taskconditions>
			<taskcondition>
				<taskid>2</taskid>
				<condition>
				<![CDATA[
				1*screening*smart+1*screening*kidding+1*screening*sum10+1*screening*sum15+1*screening*biggerthan>=4
				]]>
				</condition>
			</taskcondition>
			<taskcondition>
				<taskid>3</taskid>
				<condition>
				<![CDATA[
				notinset{$workerid,excludedemographics}
				]]>
				</condition>
			</taskcondition>
	  </taskconditions>
    </hit>
    <hit>
      <hitid>2</hitid>
      <tasks>1 2 3</tasks>
    </hit>
    <hit>
      <hitid>3</hitid>
      <tasks>1 2 3</tasks>
    </hit>
  </hits>
  
  <sets>
	<set>
		<name>excludedemographics</name>
		<members>mm lilia</members>
	</set>
  </sets>
  
  <documents>
    <document>
      <name>screening.html</name>
      <content><![CDATA[
      <p>On this page we screen you.</p>
      ]]></content>
    </document>
    <document>
      <name>spelling.html</name>
      <content><![CDATA[
      <p>Please answer these questions.</p>
      ]]></content>
    </document>
    <document>
      <name>demographics.html</name>
      <content><![CDATA[
      <p>On this page we ask questions about yourself.</p>
      ]]></content>
    </document>
  </documents>
</xml>
